<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tuijian_llin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF2B2B">
        <ImageView
            android:id="@+id/tuijian_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fanhui"/>
        <TextView
            android:id="@+id/sousuo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="我的推荐"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tuijian_yout"
        android:layout_below="@+id/tuijian_llin"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/tuijian"/>
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:text="推荐列表"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tuijian_xian"
        android:layout_below="@+id/tuijian_yout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4BDC0"/>
   <RelativeLayout
       android:id="@+id/tui_you"
       android:layout_below="@+id/tuijian_xian"
       android:layout_width="match_parent"
       android:layout_height="40dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_centerVertical="true"
           android:layout_marginLeft="5dp"
           android:text="序号"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:layout_centerInParent="true"
           android:text="手机号"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerInParent="true"
           android:textColor="#000000"
           android:layout_marginRight="5dp"
           android:text="获取伯乐币"/>
   </RelativeLayout>
    <TextView
        android:id="@+id/tui_xian"
        android:layout_below="@+id/tui_you"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4BDC0"/>
    <Button
        android:layout_below="@+id/tui_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:text="推荐用户"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#FF5656"/>
</RelativeLayout>
